!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "Probabilistic Tipping"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    = javascript_include_tag "application"
    = stylesheet_link_tag "application", :media => "all"

  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to "Probabilistic Tipping", root_url, class: "brand"
          .container.nav-collapse
            %ul.nav.pull-right
              %li= link_to "Competitions", competitions_path
              - if current_user
                %li= link_to "Logged in as #{current_user.name} at #{current_user.email}", current_user
                %li= link_to "Log Out", logout_path
              - else
                %li= link_to "Sign Up", signup_path
                %li= link_to "Log In", login_path

    .container
      .row
        .span12
          - flash.each do |name, msg|
            .alert{class: bootstrap_alert_class(name)}
              %a.close{"data-dismiss" => "alert", href: "#"} Ã—
              = msg


          = yield
          %footer.footer Yuri Feldman
    
