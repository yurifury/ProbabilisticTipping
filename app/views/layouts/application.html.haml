!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "ProbabilisticTipping"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    = javascript_include_tag "application"
    = stylesheet_link_tag "application", :media => "all"
    %link(href="images/favicon.ico" rel="shortcut icon")
    %link(href="images/apple-touch-icon.png" rel="apple-touch-icon")
    %link(href="images/apple-touch-icon-72x72.png" rel="apple-touch-icon" sizes="72x72")
    %link(href="images/apple-touch-icon-114x114.png" rel="apple-touch-icon" sizes="114x114")

  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand(href="#") Probabilistic Tipping
          .container.nav-collapse
            %ul.nav.pull-right
              - if current_user
                %li
                  %a{href: "#"} #{current_user.name} &lt;#{current_user.email}&gt;
                %li= link_to "Log Out", logout_path
              - else
                %li= link_to "Sign Up", signup_path
                %li= link_to "Log In", login_path

    .container
      .row
        .span12
          - flash.each do |name, msg|
            .alert{class: bootstrap_alert_class(name)}
              %a.close{"data-dismiss" => "alert", href: "#"} Ã—
              = msg


          = yield
          %footer.footer Yuri Feldman
    
